    <style name="CardActionButton">
        <item name="android:textSize">@dimen/card_action_text</item>
        <item name="android:textColor">#B0b0b0</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/card_action_button_background</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:minHeight">@dimen/card_action_button_height</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawablePadding">4.0dip</item>
        <!--item name="android:paddingStart">@dimen/card_padding</item>
        <item name="android:paddingEnd">@dimen/card_padding</item-->
    </style>

    <style name="CardActionButtonWithIcon" parent="@style/CardActionButton">
        <item name="android:paddingLeft">8.0dip</item>
        <!--item name="android:paddingStart">8.0dip</item-->
    </style>
    
    <style name="CardActionButtonWithIconNoTopDivider" parent="@style/CardActionButton">
        <item name="android:paddingLeft">@dimen/card_padding_nodivider</item>
        <item name="android:paddingRight">@dimen/card_padding_nodivider</item>
        <item name="android:background">@drawable/card_action_button_background_nodivider</item>
    </style>
    
    <style name="CardTitle" parent="@style/CardText">
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <!--item name="android:fontFamily">sans-serif-light</item-->
    </style>
    
